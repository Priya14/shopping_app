<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <nav>
          <div class="pull-left">
            <%= link_to image_tag("buttercups_logo.png"), store_path %>
          </div>
          <ul class="nav pull-right">
            <% unless user_signed_in? %>
              <li>  <%= link_to 'Sign Up/Sign In', new_user_registration_path%></li>
            <% else %>
              <li>  <%= link_to 'Logout', destroy_user_session_path, :data => {:method => :delete} %></li>
            <% end %>
          </ul>
        </nav>
      </div>
      <p class="subtitle fancy"><span>Online Lingerine Store</span></p>
    </header>
    <div class="container" style="margin-top: 5% !important;">
      <%= yield %>
    </div>
  </body>
</html>